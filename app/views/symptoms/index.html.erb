<div class="row">
  <div class="col-md-3">
    <div class="container top-section">
      <form action="/symptoms/diagnosis" method="GET" class="form-horizontal custom-form">
        <div class="form-group">
          <label for="SymptomId">Symptom ID</label>
          <input class="form-control" type="text" name="symptoms" id="symptom-id" placeholder="10,20,30" required>
          <div class="invalid-feedback">
            Please provide Symptoms IDS.
          </div>
        </div>
        <div class="form-group">
          <label for="birthYear">Birth Year</label>
          <input class="form-control" type="text" name="year" id="birth-year" placeholder="29" required>
          <div class="invalid-feedback">
            Please provide your birth year.
          </div>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gender" id="gender-1" value="male" checked>
          <label class="form-check-label" for="gender-1">
            Male
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gender" id="gender-2" value="female">
          <label class="form-check-label" for="gender-2">
            Female
          </label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
  <div class="col-md-6 table-section">
    <table id="symptoms-datatable" class="table table-hover" data-source="<%= symptoms_path(format: :json) %>">
      <thead>
        <tr>
          <th>ID</th>
          <th>Symptom ID</th>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
</div>
</div>

<script>
  $(document).ready(function() {
    $('#symptoms-datatable').dataTable({
      processing: true,
      serverSide: true,
      select: true,
      responsive: true,
      scrollX: true,
      dom: 'Bfrtip',
      buttons: [
        'copy', 'csv', 'excel', 'pdf', 'print'
      ],
      ajax: {
        url: $('#symptoms-datatable').data('source')
      },
      pagingType: "full_numbers",
      columns: [{
          data: "id"
        },
        {
          data: "symptom_id"
        },
        {
          data: "name"
        },
      ]
    });
  });
</script>