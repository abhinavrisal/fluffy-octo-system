<div class="row">
    <%= render 'shared/sidebar' %>
    <div class="container col-md-10">
        <table id="vaccine-data" class="table table-hover" %>
            <thead>
                <tr>
                    <th>Continent</th>
                    <th>Location</th>
                    <th>New Vaccinations</th>
                    <th>People Vaccinated</th>
                    <th>People Fully Vaccinated</th>
                    <th>Total Vaccinations</th>
                    <th>New tests</th>
                    <th>Total tests</th>
                    <th>Population</th>
                    <th>Median Age</th>
                    <th>% Aged 65 Older</th>
                    <th>% Aged 70 Older</th>
                </tr>
            </thead>
            <tbody>
                <% @vaccination_data.each do |data| %>
                <tr>
                    <td><%= data.second["continent"]%></td>
                    <td><%= data.second["location"]%></td>
                    <td><%= data.second["new_vaccinations"]%></td>
                    <td><%= data.second["people_vaccinated"]%></td>
                    <td><%= data.second["people_fully_vaccinated"]%></td>
                    <td><%= data.second["total_vaccinations"]%></td>
                    <td><%= data.second["new_tests"]%></td>
                    <td><%= data.second["total_tests"]%></td>
                    <td><%= data.second["population"]%></td>
                    <td><%= data.second["median_age"]%></td>
                    <td><%= data.second["aged_65_older"]%></td>
                    <td><%= data.second["aged_70_older"]%></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>


<script>
    $(document).ready(function() {
        $("#vaccine-data").dataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });
</script>